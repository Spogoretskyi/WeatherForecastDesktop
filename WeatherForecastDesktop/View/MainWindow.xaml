<Window x:Class="WeatherForecastDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherForecastDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="244*"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2" Margin="0,0,-0.4,0" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Current weather">
            </TabItem>
            <TabItem Header="5 day / 3 hour forecast">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <Button x:Name="Test" Content="Button" Height="100" Width="75" Background="Aqua" Visibility="Visible"/>
        </TabControl>

    </Grid>
</Window>
